<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4">
    <display-name>Project</display-name>

    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hotel</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <listener>
        <listener-class>ua.onufreiv.hotel.listener.ServletLifecycleListener</listener-class>
    </listener>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>ua.onufreiv.hotel.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>ua.onufreiv.hotel.filter.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>allowed</param-name>
            <param-value>forward,login,register</param-value>
        </init-param>
    </filter>

    <!--<filter>-->
    <!--<filter-name>passwordEncoderFilter</filter-name>-->
    <!--<filter-class>ua.onufreiv.hotel.filter.PasswordEncoderFilter</filter-class>-->
    <!--</filter>-->

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/hotel</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/hotel</url-pattern>
    </filter-mapping>

    <!--<filter-mapping>-->
    <!--<filter-name>passwordEncoderFilter</filter-name>-->
    <!--<url-pattern>/hotel</url-pattern>-->
    <!--</filter-mapping>-->

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.onufreiv.hotel.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/hotel</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jspx</welcome-file>
    </welcome-file-list>

</web-app>